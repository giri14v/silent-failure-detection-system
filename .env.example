# =========================
# Application
# =========================
APP_ENV=local
DEBUG=true

# =========================
# Database
# =========================
DATABASE_URL=sqlite:///./app.db

# =========================
# Monitoring
# =========================
BASELINE_SAMPLE_SIZE=100
CURRENT_WINDOW_MINUTES=5
LOW_CONFIDENCE_THRESHOLD=0.6

# =========================
# System State
# =========================
INITIAL_SYSTEM_STATE=HEALTHY

# =========================
# LLM Observer (Optional)
# =========================
LLM_ENABLED=false

# If enabled (local model)
LLM_MODE=local
LLM_MODEL_NAME=google/flan-t5-small

# =========================
# API
# =========================
API_HOST=127.0.0.1
API_PORT=8000